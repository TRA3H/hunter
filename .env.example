# Database
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=hunter
DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@postgres:5432/hunter

# Redis
REDIS_URL=redis://redis:6379/0

# Email Notifications (Resend)
RESEND_API_KEY=
NOTIFICATION_FROM_EMAIL=hunter@yourdomain.com
NOTIFICATION_TO_EMAIL=you@example.com

# SMTP Fallback (if Resend not configured)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Claude API (optional - for AI-assisted answers)
ANTHROPIC_API_KEY=

# Application
SECRET_KEY=
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000
LOG_LEVEL=INFO

# Playwright
PLAYWRIGHT_HEADLESS=true
